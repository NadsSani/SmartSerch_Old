<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:appbrain="http://schemas.android.com/apk/lib/com.appbrain"
     android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgCard"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/logo" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:id="@+id/bottom_layout"
                        android:weightSum="1"
                        android:layout_alignParentBottom="true"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:id="@+id/imgcall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryAlpha"
                            android:padding="10dp"
                            android:layout_weight=".25"
                            app:srcCompat="@drawable/ic_call" />
                        <ImageButton
                            android:id="@+id/imgweb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryAlpha"
                            android:padding="10dp"
                            android:layout_weight=".25"
                            app:srcCompat="@drawable/ic_web" />
                        <ImageButton
                            android:id="@+id/imgwhatsapp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryAlpha"
                            android:padding="10dp"
                            android:layout_weight=".25"
                            app:srcCompat="@drawable/ic_whatsapp" />

                        <ImageButton
                            android:id="@+id/imgemail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryAlpha"
                            android:padding="10dp"
                            android:layout_weight=".25"
                            app:srcCompat="@drawable/ic_email" />

                        <!--<ImageButton-->
                            <!--android:id="@+id/imglocation"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:background="@color/colorPrimaryAlpha"-->
                            <!--android:padding="10dp"-->
                            <!--android:layout_weight=".2"-->
                            <!--app:srcCompat="@drawable/ic_place" />-->


                    </LinearLayout>
                </android.support.v7.widget.CardView>
                    <com.appbrain.AppBrainBanner
                        android:layout_marginBottom="5dp"
                        appbrain:adid="homepage_ad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="5dp">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                            <TextView
                                                android:id="@+id/txtname"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginBottom="5dp"
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginRight="5dp"
                                                android:drawableLeft="@drawable/tag"
                                                android:drawablePadding="20dp"
                                                android:gravity="left"
                                                android:text="TextView"
                                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="1dp"
                                                android:background="@color/colorPrimaryAlpha"/>

                                            <TextView
                                                android:id="@+id/txtlocation"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:drawableLeft="@drawable/locico"
                                                android:layout_margin="5dp"
                                                android:drawablePadding="20dp"
                                                android:gravity="left"
                                                android:text="TextView"
                                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="1dp"
                                                android:background="@color/colorPrimaryAlpha"/>

                                            <TextView
                                                android:id="@+id/txtweb"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:drawableLeft="@drawable/webico"
                                                android:layout_margin="5dp"
                                                android:drawablePadding="20dp"
                                                android:gravity="left"
                                                android:text="TextView"
                                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="1dp"
                                                android:background="@color/colorPrimaryAlpha"/>

                                            <TextView
                                                android:id="@+id/txtmail"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="TextView"
                                                android:drawableLeft="@drawable/emailico"
                                                android:layout_margin="5dp"
                                                android:drawablePadding="20dp"
                                                android:gravity="left"
                                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="1dp"
                                                android:background="@color/colorPrimaryAlpha"/>

                                            <TextView
                                                android:id="@+id/txtnumber"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="TextView"
                                                android:drawableLeft="@drawable/phoneico"
                                                android:drawablePadding="20dp"
                                                android:layout_margin="5dp"
                                                android:gravity="left"
                                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="1dp"
                                                android:background="@color/colorPrimaryAlpha"/>

                                            <TextView
                                                android:id="@+id/txtwhatsapp"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="TextView"
                                                android:drawableLeft="@drawable/whatsappico"
                                                android:layout_margin="5dp"
                                                android:drawablePadding="20dp"
                                                android:gravity="left"
                                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="1dp"
                                                android:background="@color/colorPrimaryAlpha"/>
                                      </LinearLayout>
                                </android.support.v7.widget.CardView>

                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    app:cardElevation="5dp"
                                    app:cardCornerRadius="5dp">
                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:weightSum="1"
                                            android:layout_gravity="center"
                                            android:layout_height="wrap_content">
                                            <TextView
                                                android:id="@+id/txtsharecontent"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:text="Share Card"
                                                android:layout_margin="5dp"
                                                android:gravity="left|center_vertical"
                                                android:layout_weight=".8"
                                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
                                            <ImageButton
                                                android:id="@+id/imgsms"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:background="@null"
                                                android:padding="10dp"
                                                android:layout_weight=".2"
                                                android:gravity="center_vertical"
                                                android:layout_margin="5dp"
                                                app:srcCompat="@drawable/ic_share" />
                                        </LinearLayout>
                                </android.support.v7.widget.CardView>

                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    app:cardElevation="5dp"
                                    app:cardCornerRadius="5dp">
                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:weightSum="1"
                                        android:layout_gravity="center"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:id="@+id/txtreportcontent"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:text="Report An Issue"
                                            android:layout_margin="5dp"
                                            android:gravity="left|center_vertical"
                                            android:layout_weight=".8"
                                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
                                        <ImageButton
                                            android:id="@+id/imgreport"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@null"
                                            android:padding="10dp"
                                            android:layout_weight=".2"
                                            android:gravity="center_vertical"
                                            android:layout_margin="5dp"
                                            app:srcCompat="@drawable/ic_report" />
                                    </LinearLayout>
                </android.support.v7.widget.CardView>

                        </LinearLayout>

                </ScrollView>




</RelativeLayout>